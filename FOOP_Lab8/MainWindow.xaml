<Window x:Class="FOOP_Lab8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FOOP_Lab8"
        mc:Ignorable="d"
        Title="MainWindow" Height="455" Width="389">
    <Grid>
        <Button x:Name="btn_StartGame" Content="Start Game" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top" Width="75" Click="Btn_StartGame_Click"/>
        <TextBlock x:Name="tbk_Initial" HorizontalAlignment="Center" Margin="0,118,0,0" TextWrapping="Wrap" Text="Number: " VerticalAlignment="Top" Height="32" Width="133"/>
        <RadioButton x:Name="rad_Bigger" Content="Bigger" HorizontalAlignment="Left" Margin="85,197,0,0" VerticalAlignment="Top" GroupName="Guess"/>
        <RadioButton x:Name="rad_Small" Content="Smaller" HorizontalAlignment="Left" Margin="206,197,0,0" VerticalAlignment="Top" GroupName="Guess"/>
        <Button x:Name="btn_Guess" Content="Guess" HorizontalAlignment="Left" Margin="160,293,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
