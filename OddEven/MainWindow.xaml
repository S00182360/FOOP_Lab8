<Window x:Class="OddEven.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OddEven"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <TextBox x:Name="tbx_NumberInput" HorizontalAlignment="Left" Height="23" Margin="132,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" GotFocus="Tbx_NumberInput_GotFocus"/>
        <Button x:Name="btn_CheckEven" Content="Check Number" HorizontalAlignment="Left" Margin="132,140,0,0" VerticalAlignment="Top" Width="120" Click="Btn_CheckEven_Click"/>
        <TextBlock x:Name="tbk_MessageBlock" HorizontalAlignment="Left" Margin="132,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="120"/>

    </Grid>
</Window>
